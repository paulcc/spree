<fieldset>
  <legend><%= t("payment_information") %></legend>

  <p><%= image_tag "creditcard.gif", :id => 'creditcard-image' %></p>

  <!-- use this sample (visa) cc# for testing 4111111111111111 -->
  <p>
    <%= f.label :creditcard_number, t("card_number") %><br />
    <%= f.text_field :creditcard_number, :class => 'fullwidth' -%>
  </p>



  <label><%= t("expiration") %></label>
  <div style="width:120px">
    <div class="sub-field left">
      <%= select_month(@date, :prefix => 'payment_presenter', :field_name => 'creditcard_month', :use_month_numbers => true) -%>
      <br /><%= f.label :expiration_month, t("month") %>
    </div>
    <div class="sub-field right">
      <%= select_year(@date, :prefix => 'payment_presenter', :field_name => 'creditcard_year', :start_year => Date.today.year, :end_year => Date.today.year + 15) -%>
      <br /><%= f.label :creditcard_year, t("year") %>
    </div>
  </div>
  
  <p>
    <%= f.label :creditcard_verification_value, t("card_code") %><br />
    <%= f.text_field :creditcard_verification_value, {:style => "width:40px"} -%>
  </p>
  
  <a href="" onclick="window.open('/creditcards/cvv','mywin','left=20,top=20,width=500,height=500,toolbar=0,resizable=0,scrollbars=1');return false">
    (<%= t("whats_this") %>)
  </a>

</fieldset>
