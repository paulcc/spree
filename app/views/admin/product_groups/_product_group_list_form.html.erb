<h3><%= @product_group.name %> -- <%= t("add_remove_products") %></h3>

<!-- Included Product List -->
<div id="selected-products">
<%= render :partial => @product_group.view_name(:product_table), :locals => {:product_group => @product_group} %>
</div>
<!-- Product Search -->
  <label><%= t('search') %>:</label>
  <input id="searchtext" size="25">

<div id="searching" style="display:none">
  <%= t('searching') %> &nbsp; <%= image_tag "spinner.gif" %>  
</div>
<%= observe_field(:searchtext,
				  :method => 'GET',
                  :frequency => 0.75,
                  :update => :search_hits,
                  :loading => "Element.show('searching')",
                  :complete => "Element.hide('searching')",
                  :url => available_admin_product_group_products_url(@product_group),
                  :with => "'q=' + value") %>  
<br/>                 
<div id="search_hits"></div>


